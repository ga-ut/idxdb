{
  "name": "@ga-ut/idxdb",
  "version": "1.2.0",
  "description": "Type-safe IndexedDB wrapper for TypeScript",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build:bundle && bun run build:types",
    "build:bundle": "bun run build:bundle:cjs && bun run build:bundle:esm",
    "build:bundle:cjs": "bun build ./index.ts --outdir dist --format cjs --target node --entry-naming \"[name].cjs\"",
    "build:bundle:esm": "bun build ./index.ts --outdir dist --format esm --target browser --entry-naming \"[name].js\"",
    "build:types": "bunx tsc --emitDeclarationOnly",
    "lint": "bunx biome check .",
    "format": "bunx biome format --write .",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "keywords": [
    "indexeddb",
    "typescript",
    "database",
    "browser"
  ],
  "author": "ga-ut",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@types/bun": "latest",
    "fake-indexeddb": "^4.0.2",
    "typescript": "^5.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
