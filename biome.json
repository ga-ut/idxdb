{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "files": {
    "ignoreUnknown": true,
    "experimentalScannerIgnores": ["node_modules", ".bun-cache", "dist"],
    "includes": ["**/*.{ts,tsx,js,json,md,html,css}"]
  }
}
